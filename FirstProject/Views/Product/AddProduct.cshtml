@model FirstProject.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Adet</label>
        <input asp-for="Quantity" class="form-control" type="number" step="any" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

