
<h2>Giriş Yap</h2>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model FirstProject.Models.User
<form asp-controller="Account" asp-action="Login" method="post" class="form-container">

    <div class="form-group">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <p style="color:red">@ViewBag.ErrorMessage</p>

    <button type="submit" class="btn btn-primary">Login</button>
    <a style="margin-left:15px" class="btn btn-secondary" asp-controller="Account" asp-action="Register">Register</a>
</form>
    