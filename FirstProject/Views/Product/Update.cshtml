@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model FirstProject.Models.Product

@{
    ViewData["Title"] = "Ürün Güncelle";
}

<h2>@ViewData["Title"] </h2>

<form asp-controller="Product" asp-action="Update" @* asp-route-id="ProductId" *@ method="post">
    <input type="number" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="ProductName">ProductName</label><br />
        <input asp-for="ProductName" class="form-control" /><br />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label><br />
        <input asp-for="Quantity" class="form-control" /><br />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
