@{
    ViewData["Title"] = "Anasayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
            font-family: 'Arial', sans-serif;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        .header h1 {
            font-size: 3rem;
            color: #007bff;
        }
        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }
        .buttons a {
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s;
        }
        .btn-signin {
            background-color: #007bff;
            color: white;
        }
        .btn-signin:hover {
            background-color: #0069d9;
        }
        .btn-register {
            background-color: #28a745;
            color: white;
        }
        .btn-register:hover {
            background-color: #218838;
        }
        .btn-admin {
            margin-top: 30px;
            display: inline-block;
            padding: 12px 24px;
            background-color: #ffc107;
            color: #212529;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        .btn-admin:hover {
            background-color: #e0a800;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="header">
            <h1>Hoşgeldiniz</h1>
            <p class="lead">Lütfen giriş yapın veya kaydolun</p>
        </div>

        <div class="buttons mb-4">
            <a href="/Account/Login" class="btn btn-signin">Giriş Yap</a>
            <a href="/Account/Register" class="btn btn-register">Kayıt Ol</a>
        </div>

        <div class="text-center">
            <a href="/Account/AdminLogin" class="btn-admin">Yönetici Paneli</a>
        </div>
    </div>
    @* <div style="background-color:limegreen;height:30px; width:fit-content;color:wheat;">@ViewBag.SuccessLogin Başarıyla giriş yapıldı!</div> *@
    @ViewBag.SuccessLogin
</body>
</html>